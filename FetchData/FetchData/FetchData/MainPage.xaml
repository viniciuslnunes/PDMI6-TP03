<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FetchData.MainPage">

    <StackLayout>
        <StackLayout Padding="20">
        <ListView x:Name="ListLogin">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell >
                        <StackLayout >
                            <Label Text="{Binding Email}"></Label>
                            <Label Text="{Binding Password}"></Label>
                           
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </StackLayout>
        <Button Clicked="btnReload" Text="Recarregar" BackgroundColor="Blue" TextColor="White"></Button>

    </StackLayout>

</ContentPage>
